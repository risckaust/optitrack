<launch>
	<arg name="ns" default="rb1" />
	<arg name="id" default="0"/>

	<group ns="$(arg ns)">
		<arg name="rb_id" value="$(arg id)" />
		<param name="rigidbody_id" type="int" value="$(arg rb_id)" />
		<node name="mocap2mavros_rb_$(arg rb_id)" pkg="optitrack" type="mocap_pose.py" output="screen">
		</node>
	</group>
</launch>
